<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="centered">
                <h1>
                    <%= product.title %>
                </h1>
                <hr>
                <div class="image">
                    <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                <h2>
                    <%= product.price %>
                </h2>
                <p>
                    <%= product.description %>
                </p>
                <% if(isAuthentication) { %>
                    <a href="/add-to-cart/<%= product.id %>" class="btn">Add to Cart</a>
                    <% } %>
            </main>
            <%- include('../includes/end.ejs') %>